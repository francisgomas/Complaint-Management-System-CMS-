@model ComplaintForm

@{
    ViewData["MainTitle"] = "Forms";
    ViewData["Title"] = "Complaint Form - Submission to Permanent Secretary";
}

<partial name="_Heading" />

<section id="content">
	<div class="content-wrap">
		<div class="container clearfix">

				<div class="row">
					<div class="col-12">
						@{
							  if(ViewBag.SuccessMessage != null)
							  {
									<div class="alert alert-dismissible alert-success">
										Form submitted successfully! <strong>@ViewBag.SuccessMessage</strong>.
										<button type="button" class="btn-close btn-sm" data-bs-dismiss="alert" aria-hidden="true"></button>
									</div>
							  }
							  if(ViewBag.ErrorMessage != null)
							  {
									<div class="alert alert-dismissible alert-danger">
										Error! <strong>@ViewBag.ErrorMessage</strong>.
										<button type="button" class="btn-close btn-sm" data-bs-dismiss="alert" aria-hidden="true"></button>
									</div>
							  }
						}

						<form class="row" asp-action="SubmitToPS">
							<div asp-validation-summary="ModelOnly" class="text-danger"></div>
							
							<div class="col-lg-12 form-group">
								<label asp-for="TrackingId"></label><span class="requiredIcon">*</span>
								<input asp-for="TrackingId" class="form-control required" placeholder="Enter your Tracking Id"/>
								<span asp-validation-for="TrackingId" class="text-danger"></span>
							</div>
							<div class="col-lg-12 form-group">
								<label>Reason for escalating complaint to Permanent Secretary (PS)</label><span class="requiredIcon">*</span>
								<input asp-for="Comments" class="form-control" placeholder="Enter your reason" required />
								<span asp-validation-for="Comments" class="text-danger"></span>
							</div>

							<div class="col-12">
								<input type="submit" class="btn btn-secondary" value="Submit Form"/>
							</div>
						</form>
					</div>
				</div>

		</div>
	</div>
</section>

