<script type="text/javascript">
	//Health Facility - COMPLAINT DETAILS
	function showOthersInput(select){
	   if(select.value==8){
		document.getElementById('othersHealthFac').style.display = "block";
	   } else{
		document.getElementById('othersHealthFac').style.display = "none";
	   }
	} 

	//First time complaint - COMPLAINT DETAILS
	const first_time_reason = document.getElementById('firstTimeReason');
	function handleFirstTimeClick() {
	  if (document.getElementById('ComplaintNo').checked) {
		first_time_reason.style.display = 'block';
	  } else {
		first_time_reason.style.display = 'none';
	  }
	}

	const radioButtons = document.querySelectorAll('input[name="ComplaintDetails.ComplaintFirstTime"]');
	radioButtons.forEach(radio => {
	  radio.addEventListener('click', handleFirstTimeClick);
	});


	//Behalf complaint - COMPLAINT DETAILS
	const lodging_complaint = document.getElementById('behalfReason');
	function handleBehalfClick() {
	  if (document.getElementById('ComplaintBehalfYes').checked) {
		lodging_complaint.style.display = 'block';
	  } else {
		lodging_complaint.style.display = 'none';
	  }
	}

	const radioButtons2 = document.querySelectorAll('input[name="ComplaintDetails.ComplaintBehalf"]');
	radioButtons2.forEach(radio => {
	  radio.addEventListener('click', handleBehalfClick);
	});

	//Track my application
	function submitTrackApp(){
        var url = $("#trackAppForm").attr("action");
		var data = $("#trackAppForm").serialize(); 

        $.ajax({
            type: 'POST',
            url: url,
            data: data,
			contentType: 'application/x-www-form-urlencoded; charset=UTF-8',
            success: function (response) {
                if (response.result == true) {
					Swal.fire({
					  icon: 'success',
					  title: 'Success!',
					  text: response.message,
					})
                }
                else {
					Swal.fire({
					  icon: 'warning',
					  title: 'Something went wrong!',
					  text: response.message,
					})
				}
            },
            error: function () {
				Swal.fire({
					icon: 'error',
					title: 'Error!',
					text: 'Failed to receive the data',
				})
			}
        });
	}
</script>
